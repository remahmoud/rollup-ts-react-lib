{
    "name": "ts-react-lib",
    "private": false,
    "version": "1.0.0",
    "type": "module",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/index.d.ts",
    "description": "rollup typescript react library starter template",
    "files": [
        "dist"
    ],
    "scripts": {
